<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/code_font" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/code_font_description"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/font_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_audiowide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CardViewTopRoundedOutlined">

                    <include
                        android:id="@+id/option_audiowide"
                        layout="@layout/item_onboarding_simple_option"
                        app:text="@{@string/audiowide}" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_fira_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    app:cardCornerRadius="4dp">

                    <include
                        android:id="@+id/option_fira_code"
                        layout="@layout/item_onboarding_simple_option"
                        app:text="@{@string/fira_code}" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_jetbrains_mono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    app:cardCornerRadius="4dp">

                    <include
                        android:id="@+id/option_jetbrains_mono"
                        layout="@layout/item_onboarding_simple_option"
                        app:text="@{@string/jetbrains_mono}" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_noto_sans_mono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    app:cardCornerRadius="4dp">

                    <include
                        android:id="@+id/option_noto_sans_mono"
                        layout="@layout/item_onboarding_simple_option"
                        app:text="@{@string/noto_sans_mono}" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_poppins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    app:cardCornerRadius="4dp">

                    <include
                        android:id="@+id/option_poppins"
                        layout="@layout/item_onboarding_simple_option"
                        app:text="@{@string/poppins}" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_roboto_mono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    app:cardCornerRadius="4dp">

                    <include
                        android:id="@+id/option_roboto_mono"
                        layout="@layout/item_onboarding_simple_option"
                        app:text="@{@string/roboto_mono}" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_google_sans_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CardViewBottomRoundedOutlined">

                    <include
                        android:id="@+id/option_google_sans_code"
                        layout="@layout/item_onboarding_simple_option"
                        app:text="@{@string/google_sans_code}" />
                </com.google.android.material.card.MaterialCardView>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
</layout>
